{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Frontend",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/hasheous/bin/Debug/net8.0/hasheous.dll",
            "args": [],
            "cwd": "${workspaceFolder}/hasheous",
            "enableStepFiltering": false,
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Service Orchestrator",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/service-orchestrator/bin/Debug/net8.0/service-orchestrator.dll",
            "args": [],
            "cwd": "${workspaceFolder}/service-orchestrator",
            "enableStepFiltering": false,
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Service Host",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/service-host/bin/Debug/net8.0/service-host.dll",
            "args": [
                "--service",
                "MetadataMapDump",
                "--reportingserver",
                "https://localhost:5001"
            ],
            "cwd": "${workspaceFolder}/service-host",
            "stopAtEntry": false
        },
        {
            "name": "Task Runner",
            "type": "dotnet",
            "request": "launch",
            "preLaunchTask": "build",
            "projectPath": "${workspaceFolder}/hasheous-taskrunner/hasheous-taskrunner.csproj"
        }
    ],
    "compounds": [
        {
            "name": "Frontend and Service Orchestrator",
            "configurations": [
                "Frontend",
                "Service Orchestrator"
            ]
        },
        {
            "name": "Task Runner and Frontend",
            "configurations": [
                "Task Runner",
                "Frontend"
            ]
        }
    ]
}